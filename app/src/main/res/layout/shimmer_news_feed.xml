<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/searchBarFeedShimmer"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_margin="6dp"
            android:backgroundTint="@color/shimmer1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/justTextShimmer"
            android:layout_width="143dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/shimmer1"
            app:layout_constraintEnd_toEndOf="@+id/searchBarFeedShimmer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/searchBarFeedShimmer"
            app:layout_constraintTop_toBottomOf="@+id/searchBarFeedShimmer" />

        <LinearLayout
            android:id="@+id/latestNewsFeedRecyclerShimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/justTextShimmer">

                <include layout="@layout/shimmer_bns"/>

                <include layout="@layout/shimmer_bns"/>

                <include layout="@layout/shimmer_bns"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/forTextShimmer"
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/shimmer1"
            app:layout_constraintEnd_toEndOf="@+id/latestNewsFeedRecyclerShimmer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/latestNewsFeedRecyclerShimmer"
            app:layout_constraintTop_toBottomOf="@+id/latestNewsFeedRecyclerShimmer" />

        <LinearLayout
            android:id="@+id/newsFeedRecyclerShimmer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forTextShimmer" >


                <include layout="@layout/shimmer_for_you"/>

                <include layout="@layout/shimmer_for_you"/>

                <include layout="@layout/shimmer_for_you"/>

                <include layout="@layout/shimmer_for_you"/>

                <include layout="@layout/shimmer_for_you"/>

                <include layout="@layout/shimmer_for_you"/>

        </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>